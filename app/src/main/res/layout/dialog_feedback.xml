<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/feedback"
        android:textColor="@color/colorTextPrimary"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edt_feedback"
        android:gravity="start"
        android:hint="@string/hind_feedback"
        android:lines="8"
        android:maxLines="12"
        android:minLines="4"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp"
        android:textColor="@color/colorTextPrimary"
        android:textColorHint="@color/colorTextSecond"
        android:textSize="15sp"
        tools:ignore="Autofill,TextFields" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"

        android:gravity="center">

        <Button
            android:id="@+id/btn_cancel"
            style="@style/ButtonWarning"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="12dp"
            android:text="@string/cancel_feedback"
            android:textSize="11sp" />

        <Button
            android:id="@+id/btn_send_feedback"
            style="@style/ButtonSigninSignup"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:text="@string/send_feedback"
            android:textSize="11sp" />
    </LinearLayout>
</LinearLayout>

