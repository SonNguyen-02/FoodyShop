<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <ImageView
        android:id="@+id/img_product"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="@dimen/space_view"
        android:src="@drawable/test_product_icon"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_toEndOf="@id/img_product"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/product_name"
            android:textColor="@color/colorTextPrimary"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_product_name"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="@string/product_price"
                android:textColor="@color/colorTextSecond" />

            <TextView
                android:id="@+id/tv_price_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_price_sale"
                android:textColor="@color/colorTextPrice"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/img_minus"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:alpha="0.5"
                android:background="@drawable/ripple_btn_amount"
                android:padding="6dp"
                android:src="@drawable/ic_minus_amount"
                app:tint="@color/colorPrimary"
                tools:ignore="ContentDescription" />

            <EditText
                android:id="@+id/edt_amount"
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:layout_marginStart="-2dp"
                android:layout_marginEnd="-2dp"
                android:background="@drawable/custom_bg_btn_amount"
                android:importantForAutofill="no"
                android:inputType="number"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"
                tools:ignore="LabelFor" />

            <ImageView
                android:id="@+id/img_plus"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/ripple_btn_amount"
                android:padding="6dp"
                android:src="@drawable/ic_plus_amount"
                app:tint="@color/colorPrimary"
                tools:ignore="ContentDescription" />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
