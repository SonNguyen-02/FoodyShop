<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginEnd="@dimen/space_view"
            android:src="@drawable/test_product_icon"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_product"
            android:layout_toEndOf="@id/img_product"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/product_name"
                android:textColor="@color/colorTextPrimary"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/tv_price_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_price_sale"
                android:textColor="@color/colorTextPrice"
                android:textSize="18sp" />

            <TextView
                android:id="@id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_price"
                android:textColor="@color/colorTextSecond" />
        </LinearLayout>
    </RelativeLayout>

    <include layout="@layout/divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Số lượng"
            android:textColor="@color/colorTextPrimary"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/img_minus"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:alpha="0.5"
                android:background="@drawable/ripple_btn_amount"
                android:padding="6dp"
                android:src="@drawable/ic_minus_amount"
                tools:ignore="ContentDescription"
                app:tint="@color/colorPrimary" />

            <EditText
                android:id="@+id/edt_amount"
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:layout_marginStart="-2dp"
                android:layout_marginEnd="-2dp"
                android:background="@drawable/custom_bg_btn_amount"
                android:importantForAutofill="no"
                android:inputType="number"
                android:text="1"
                android:textSize="15sp"
                android:textColor="@color/colorAccent"
                android:textAlignment="center"
                tools:ignore="LabelFor" />

            <ImageView
                android:id="@+id/img_plus"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/ripple_btn_amount"
                android:padding="6dp"
                android:src="@drawable/ic_plus_amount"
                tools:ignore="ContentDescription"
                app:tint="@color/colorPrimary" />

        </LinearLayout>
    </RelativeLayout>

    <include layout="@layout/divider" />

    <Button
        android:id="@+id/btn_add_to_cart"
        style="@style/ButtonWarning"
        android:layout_width="220dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:text="Thêm vào Giỏ hàng"
        android:textSize="15sp"
        android:textStyle="normal" />


</LinearLayout>