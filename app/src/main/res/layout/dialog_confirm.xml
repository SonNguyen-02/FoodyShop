<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="@dimen/space_view"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn có muốn xóa sản phẩm này?"
            android:textColor="@color/colorTextPrimary"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_cancel"
            style="@style/ButtonWarning"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:textSize="11sp"
            android:layout_marginEnd="@dimen/space_view"
            android:layout_marginBottom="@dimen/space_view"
            android:text="@string/cancel_feedback" />

        <Button
            android:id="@+id/btn_ok"
            style="@style/ButtonSigninSignup"
            android:layout_width="100dp"
            android:textSize="11sp"
            android:layout_height="32dp"
            android:layout_marginStart="@dimen/space_view"
            android:layout_marginBottom="@dimen/space_view"
            android:text="@string/confirm" />
    </LinearLayout>
</LinearLayout>