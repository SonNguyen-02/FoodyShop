<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingEnd="8sp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/space_view"
        android:minHeight="70dp">

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="220dp"
            android:text="Đổi mật khẩu thành công !"
            android:textColor="@color/colorTextPrimary"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_info" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btn_cancel"
            style="@style/ButtonWarning"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:textSize="11sp"
            android:layout_marginEnd="@dimen/space_view"
            android:layout_marginBottom="12dp"
            android:text="@string/cancel_feedback" />

        <Button
            android:id="@+id/btn_ok"
            style="@style/ButtonSigninSignup"
            android:layout_width="100dp"
            android:textSize="11sp"
            android:layout_height="32dp"
            android:layout_marginStart="@dimen/space_view"
            android:layout_marginBottom="12dp"
            android:text="@string/confirm" />
    </LinearLayout>
</LinearLayout>