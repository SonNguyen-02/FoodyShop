<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_bg_white_corn_topleft_24_topright_24"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_bg_white_corn_topleft_24_topright_24"
        android:gravity="center"
        android:padding="15dp">

        <View
            android:layout_width="50dp"
            android:layout_height="8dp"
            android:background="@drawable/custom_bg_grey_corn_8" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_show_avatar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/ripple_while"
        android:gravity="center_vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:background="@color/md_grey_200"
                android:padding="10dp"
                android:src="@drawable/ic_profile"
                tools:ignore="ContentDescription" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/show_avatar"
            android:textColor="@color/colorTextPrimary"
            android:textSize="17sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_change_avatar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/ripple_while"
        android:gravity="center_vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:background="@color/md_grey_200"
                android:padding="10dp"
                android:src="@drawable/ic_gallery"
                app:tint="@color/black"
                tools:ignore="ContentDescription" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/change_avatar"
            android:textColor="@color/colorTextPrimary"
            android:textSize="17sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_close"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/ripple_while"
        android:gravity="center_vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:background="@color/md_grey_200"
                android:padding="12dp"
                android:src="@drawable/ic_clear"
                app:tint="@color/black"
                tools:ignore="ContentDescription" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/close_bottom_sheet"
            android:textColor="@color/colorTextPrimary"
            android:textSize="17sp" />

    </LinearLayout>

</LinearLayout>